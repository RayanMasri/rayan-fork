{
  "name": "@sikka/hajar",
  "version": "1.0.13",
  "description": "Toolkit to create SaaS applications",
  "main": "dist/Hajar.cjs.min.js",
  "module": "dist/Hajar.esm.min.js",
  "unpkg": "dist/Hajar.umd.min.js",
  "files": [
    "src/",
    "dist/"
  ],
  "scripts": {
    "build": "rollup -c --environment BUILD:production",
    "dev": "rollup -c -w",
    "lint": "eslint src/**/*.js",
    "test": "jest --config jest.config.js",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "clean": "rimraf dist coverage",
    "prepare": "npm-run-all clean lint test build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sikka-software/Hajar.git"
  },
  "keywords": [
    "SaaS",
    "Toolkit"
  ],
  "license": "MIT",
  "author": "SIKKA SOFTWARE",
  "bugs": {
    "url": "https://github.com/sikka-software/Hajar/issues"
  },
  "homepage": "https://github.com/georapbox/rollup-library-starter-kit#readme",
  "devDependencies": {
    "@babel/core": "~7.17.9",
    "@babel/plugin-proposal-object-rest-spread": "~7.17.3",
    "@babel/preset-env": "~7.16.11",
    "@babel/register": "~7.17.7",
    "@rollup/plugin-babel": "~5.3.1",
    "@rollup/plugin-commonjs": "~22.0.0",
    "@rollup/plugin-node-resolve": "~13.2.1",
    "cross-env": "~7.0.3",
    "eslint": "~8.14.0",
    "jest": "~28.0.1",
    "npm-run-all": "~4.1.5",
    "rimraf": "~3.0.2",
    "rollup": "~2.70.2",
    "rollup-plugin-terser": "~7.0.2"
  },
  "dependencies": {
    "@firebase/app": "~0.7.33",
    "@firebase/auth": "~0.20.7",
    "aws-sdk": "~2.1224.0",
    "base64-stream": "~1.0.0",
    "crypto-js": "~4.1.1",
    "date-fns": "~2.29.3",
    "fs": "0.0.1-security",
    "handlebars": "~4.7.7",
    "moment": "~2.29.4",
    "mongoose": "~6.6.3",
    "node-schedule": "~2.1.0",
    "nodemailer": "~6.7.8",
    "qrcode": "~1.5.1",
    "wkhtmltopdf": "~0.4.0"
  },
  "browserslist": "> 0.5%, last 2 versions, Firefox ESR, not dead",
